<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mc="http://xamarin.com/schemas/2014/forms/design"
             mc:Ignorable="d"
             x:Class="AppGuiaDev.App">
    <Application.Resources>
        <ResourceDictionary>
            <Style x:Key="Botao" TargetType="Button">
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="TextColor" Value="#fff" />
            </Style>

            <Style x:Key="BotaoEscuro" TargetType="Button" BasedOn="{StaticResource Botao}">
                <Setter Property="BackgroundColor" Value="#3e474c" />
            </Style>
            <Style x:Key="BotaoVermelho" TargetType="Button" BasedOn="{StaticResource Botao}">
                <Setter Property="BackgroundColor" Value="#EA131F" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>